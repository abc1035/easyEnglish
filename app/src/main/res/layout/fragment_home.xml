<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        tools:context=".LoginActivity">

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray"
            android:orientation="horizontal">

            <Button
                android:id="@+id/word_Label"
                style="@style/ButtonNoShadowStyle"
                android:layout_width="337dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_search" />

            <Button
                android:id="@+id/word_Setting"
                style="@style/ButtonNoShadowStyle"
                android:layout_width="31dp"
                android:layout_height="29dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/btn_setting" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="363dp"
            android:layout_height="416dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_shape"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_shape"
                android:orientation="horizontal"

                android:paddingTop="10dp"
                android:paddingRight="100dp">

                <TextView
                    android:id="@+id/word_LabelSelect"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content"
                    android:text="六级词汇"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.757"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.761" />

                <Button
                    android:id="@+id/word_LabelChange"
                    android:layout_width="68dp"
                    android:layout_height="18dp"

                    android:background="@drawable/btn_up"
                    android:text="学习计划"
                    android:textColor="@color/colorMainWhite" />
            </LinearLayout>

            <TextView
                android:id="@+id/word_Process"
                android:layout_width="199dp"
                android:layout_height="37dp"
                android:layout_marginBottom="10dp"
                android:text="当前进度 0/3071"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.757"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.761" />

            <ProgressBar
                android:id="@+id/word_ProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="32dp"

                android:max="3071"
                android:progress="0" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="0dp"

                android:orientation="horizontal"

                android:paddingTop="10dp"
                android:paddingRight="10dp">


                <Button
                    android:id="@+id/word_LabelChange4"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:drawableTop="@drawable/btn_list"
                    android:text="单词列表" />

                <Button
                    android:id="@+id/word_LabelChange5"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/btn_favor"
                    android:text="收藏单词" />

                <Button
                    android:id="@+id/word_LabelChange6"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableTop="@drawable/btn_message"
                    android:text="消息通知" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"

                android:orientation="horizontal"

                android:paddingTop="10dp"
                android:paddingRight="10dp">


                <Button
                    android:id="@+id/word_LabelChange1"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"

                    android:drawableTop="@drawable/btn_schedule"
                    android:text="学习计划" />

                <Button
                    android:id="@+id/word_LabelChange2"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/btn_abc"
                    android:text="词汇量" />

                <Button
                    android:id="@+id/word_LabelChange3"
                    style="@style/ButtonNoShadowStyle"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableTop="@drawable/btn_stat"
                    android:text="学习统计" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="183dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp">

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="145dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/word_StudyNumber"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="40"
                    android:textColor="@color/colorReddishBlue"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/word_Today1"
                    android:layout_width="85dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="今日新词"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.757"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.761" />

                <Button
                    android:id="@+id/word_Study"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_bg"
                    android:text="开始学习"
                    android:textColor="@color/colorMainWhite"
                    style="@style/ButtonNoShadowStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="177dp"
                android:layout_height="145dp"

                android:layout_marginLeft="7dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/word_ReviewNumber"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="120"
                    android:textColor="@color/colorReddishBlue"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/word_Today2"
                    android:layout_width="85dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="复习任务"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.757"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.761" />

                <Button
                    android:id="@+id/word_Review"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_bg"
                    android:text="开始复习"
                    android:textColor="@color/colorMainWhite"
                    style="@style/ButtonNoShadowStyle"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


